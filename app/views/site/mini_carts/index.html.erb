<p id="notice"><%= notice %></p>

<h1>Listing Mini Carts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mini_carts.each do |mini_cart| %>
      <tr>
        <td><%= link_to 'Show', mini_cart %></td>
        <td><%= link_to 'Edit', edit_mini_cart_path(mini_cart) %></td>
        <td><%= link_to 'Destroy', mini_cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

