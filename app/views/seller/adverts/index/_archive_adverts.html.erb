<li>
    <table class="uk-table">
        <thead>
            <tr>
                <th>id</th>
                <th>Товар</th>
                <th>Позиций</th>
                <th>Показов  </th>
                <th>Стоимость</th>
                <th>Дата завершения</th>
            </tr>
        </thead>
        <tbody>
            <%# @active_adverts.each do |advert| %>
            <% @adverts.each do |advert| %>
            <tr>
                <td><%= advert.id %></td>
                <td class="uk-text-large uk-text-nowrap"><%= link_to advert.product.name, edit_seller_advert_path(advert) %></td>
                <td class="uk-text-nowrap"><%= advert.advert_positions.size %></td>
                <td class="uk-text-nowrap"><%= advert.total_views %></td>
                <td class="uk-text-nowrap"> <%= advert.total_price %>$</td>
                <td class="uk-text-nowrap"> <%= advert.updated_at.to_date %></td>
                
            </tr>
            <% end %>
        </tbody>
    </table>
</li>