<div id="page_content">
    <div id="page_content_inner">
        <div id="page_heading">
            <h1 id="product_edit_name">Объявление #<%= @advert.id %></h1>
        </div>
        <div id="page_content_inner">
            <%= form_for([:seller, @advert], class: "uk-form-stacked", id: "product_edit_form", :multipart => true ) do |f| %>
            <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
                
                <div class="uk-width-xLarge-10-10  uk-width-large-10-10">
                    
                    
                    <div class="md-card">
                        <div class="md-card-content">
                            <h3 class="heading_a">Категории для показа</h3>
                            
                            <table class="uk-table uk-table-hover">
                                <thead>
                                    <tr>
                                        <th >Категория</th>
                                        <th>Показывать <br/> в товарах <br/> категории</th>
                                        <th>Кол-во <br/> показов</th>
                                        <th>Цена <br/>за показ <br/> в категории</th>
                                        <th>Надбавка <br/> за показ <br/> в товарах</th>
                                        <th>Стоимость <br/> позиции</th>
                                        <th>Время<br/> действия</th>
                                        <th>Показано</th>
                                        <th>Остаток показов <br/> категория / карточка</th>
                                        <th>Дата завершения</th>
                                        <th>Действие</th>            
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @advert_categories.each do |category| %>
                                    <tr>
                                        <td><%= category.product_category.name %></td>
                                        <% if category.show_in_products == true %>
                                        <td>da</td>
                                        <% else %>
                                        <td>net</td>
                                        <% end %>
                                        <td><%= category.views %></td>
                                        <td><%= category.category_price %> </td>
                                        <td><%= category.product_category.margin_product_one_view %></td>
                                        <td><%= category.total_price %></td>
                                        <td><%= category.time_days %></td>
                                        <td><%= category.current_views %></td>
                                        <td><%= category.residue_views %> <br/> <%= category.residue_views_in_category %> / <%= category.residue_views_in_product %> </td>
                                        <td>01.10.2015</td>
                                        <td><%= link_to 'Удалить', category, method: :delete %>
                                        </td>
                                    </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="md-card">
                        <div class="md-card-content">
                            <h3 class="heading_a">Добавить категорию</h3>
                            <table class="uk-table uk-table-hover">
                                <thead>
                                    <tr>
                                        <th class="uk-width-large-5-10">Категория</th>
                                        <th class="uk-width-large-2-10">Показывать в товарах </th>
                                        <th class="uk-width-large-1-10">Кол-во показов</th>
                                        <th class="uk-width-large-1-10">Время действия</th>
                                        <th class="uk-width-large-1-10">Действие</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th class="uk-width-large-5-10">
                                            <%= f.select :advert_category_id , ProductCategory.all.collect {|category| [category.name, category.id ]}  %>
                                        </th>
                                        <th class="uk-width-large-2-10"><%= f.select(:advert_category_show_in_products, options_for_select([['Да', true], ['Нет', false]], selected: nil), {include_blank: 'Не выбрано'},{"data-md-selectize": true }) %></th>
                                        <th class="uk-width-large-1-10"><%= f.text_field :advert_category_views, class: "md-input" %></th>
                                        
                                        <th class="uk-width-large-1-10"><%= f.text_field :advert_category_time_days, class: "md-input" %></th>
                                        
                                        <th class="uk-width-large-1-10"><%= f.submit(class: "md-btn md-btn-success", value: "Добавить") %>
                                       
                                        </th>
                                    </tr>
                                    
                                </tbody>
                            </table>
                            
                        </div>
                    </div>
                    <div class="md-card">
                        <div class="md-card-toolbar">
                            <h3 class="md-card-toolbar-heading-text">
                            Основная информация
                            </h3>
                        </div>
                        <div class="md-card-content large-padding">
                            <div class="uk-grid uk-grid-divider uk-grid-medium" data-uk-grid-margin>
                                <div class="uk-width-large-1-2">
                                    <div class="uk-form-row">
                                        <label for="product_edit_control">Категория</label>
                                        <%# f.select :advert_category_id , ProductCategory.all.collect {|category| [category.name, category.id ]},{include_blank: 'Не выбрано'}, {"data-md-selectize ": true } %>
                                        
                                    </div>
                                </div>
                                <div class="uk-width-large-1-2">
                                    <div class="uk-form-row">
                                        <div class="uk-input-group">
                                            <label for="product_edit_control">Цена</label>
                                            <%# f.text_field :advert_category_id, class: "md-input" %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="md-fab-wrapper">
                <a class="md-btn" href="/seller/adverts/">Назад</a>
                <%= f.submit(class: "md-btn md-btn-success", value: "Обновить") %>
            </div>
            <% end %>
        </div>
    </div>
</div>