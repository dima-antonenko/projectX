<div id="page_content">
        <div id="page_content_inner">

            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-grid" data-uk-grid-margin="">
                        <div class="uk-width-medium-3-10">
                            <label for="product_search_name">Название</label>
                            <input type="text" class="md-input" id="product_search_name">
                        </div>
                        <div class="uk-width-medium-1-10">
                            <label for="product_search_price">Цена</label>
                            <input type="text" class="md-input" id="product_search_price">
                        </div>
                        <div class="uk-width-medium-3-10">
                            <div class="uk-margin-small-top">
                                <select id="product_search_status" data-md-selectize multiple data-md-selectize-bottom>
                                    <option value="">Статус</option>
                                    <option value="1">В наличии</option>
                                    <option value="2">Под заказ</option>
                                </select>
                            </div>
                        </div>
                        <div class="uk-width-medium-1-10">
                            <div class="uk-margin-top uk-text-nowrap">
                                <input type="checkbox" name="product_search_active" id="product_search_active" data-md-icheck/>
                                <label for="product_search_active" class="inline-label">Опубликован</label>
                            </div>
                        </div>
                        <div class="uk-width-medium-2-10 uk-text-center">
                            <a href="#" class="md-btn md-btn-primary uk-margin-small-top">Искать</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-grid" data-uk-grid-margin>
                        <div class="uk-width-1-1">
                            <div class="uk-overflow-container">
                                <table class="uk-table">
                                    <thead>
                                        <tr>
                                            <th>Изображение</th>
                                            <th>Название</th>
                                            <th>Цена</th>
                                            <th>Статус</th>
                                            <th>Публикация</th>
                                            <th>Действие</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% @products.each do |product| %>
                                        <tr>
                                            <td><img class="img_thumb" src="<%= product.avatar.admin %>" alt=""></td>
                                            <td class="uk-text-large uk-text-nowrap"><a href="<%= edit_seller_product_path(product.id) %>"><%= product.name %></a></td>
                                            <td class="uk-text-nowrap">$ <%= product.price %></td>
                                            <td class="uk-text-nowrap">
                                            <% if product.avability == 'in_stock' %>
                                                <span class="uk-badge uk-badge-success">В наличии</span>
                                            <% elsif product.avability == 'pre_order' %>
                                                <span class="uk-badge uk-badge-danger">Под заказ</span>             
                                            <% end %>
                                            </td>
                                            <td>
                                           
                                            <% if product.status == 'published' %>
                                                 <i class="material-icons uk-text-success md-24"></i>
                                            <% elsif product.status == 'no_published' %>
                                                 <i class="material-icons uk-text-muted md-24">&#xE835;</i>            
                                            <% end %>            
                                            </td>
                                            <td class="uk-text-nowrap">
                                                <% # link_to "<i class=\"material-icons md-24\">&#xE8F4;</i>".html_safe, administrator_product_path(product) %>
                                                <%= link_to "<i class=\"material-icons md-24\">&#xE872;</i>".html_safe, seller_product_path(product), method: :delete, data: { confirm: 'Удалить товар ?' } %>
                                            
                                            </td>
                                        </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
             <div class="md-fab-wrapper">
                <a class="md-btn md-btn-success" href="/seller/products/new">Добавить</a>
            </div>
        </div>
    </div>