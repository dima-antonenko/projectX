<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to 'Show', post_category_post_path(post.post_category, post) %></td>
        <td><%= link_to 'Edit', edit_post_category_post_path(post.post_category, post) %></td>
        <td><%= link_to 'Destroy', post_category_post_path(post.post_category, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

