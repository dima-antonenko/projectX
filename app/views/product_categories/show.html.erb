<% provide(:class, 'category-page option6') %>
<div class="breadcrumb clearfix">
    <a class="home" href="/" title="Return to Home">Главная</a>
    <span class="navigation-pipe">&nbsp;</span>
    <span class="navigation_page"><%= @product_category.name %></span>
</div>
<!-- ./breadcrumb -->
<div class="row">
    <!-- Left colunm -->
    <%= render '/layouts/main/sidebar' %>
    <!-- ./left colunm -->
    <!-- Center colunm-->
    <div class="center_column col-xs-12 col-sm-9" id="center_column">
        <!-- category-slider -->
        <div class="category-slider">
            <ul class="owl-carousel owl-style2" data-dots="false" data-loop="true" data-nav = "true" data-autoplayTimeout="1000" data-autoplayHoverPause = "true" data-items="1">
                <li>
                    <img src="<%= @product_category.avatar.normal %>" alt="category-slider">
                </li>
                <% @product_category_attacments.each do |attacment| %>
                <li>
                    <img src="<%= attacment.image.normal %>" alt="category-slider">
                </li>
                <% end %>
            </ul>
        </div>
        <!-- ./category-slider -->
        <!-- subcategories -->
        <div class="cat-short-desc">
            <div class="desc-text text-left">
                <p>
                    Mauris accumsan nulla vel diam. Sed in lacus ut enim adipiscing aliquet. Nulla venenatis. In pede mi, aliquet sit amet, euismod in, auctor ut, ligula. Aliquam dapibus tincidunt metus. Praesent justo dolor, lobortis quis, lobortis dignissim, pulvinar ac, lorem. Vestibulum sed ante. Donec sagittis euismod purus. Sed ut perspiciatis sit voluptatem accusantim doloremque laudantim.
                </p>
            </div>
            <div class="cat-short-desc-products">
                <ul class="row">
                    <li class="col-sm-3">
                        <div class="product-container">
                            <div class="product-thumb">
                                <a href="#"><img src="/data/sub-cat1.jpg" alt="Product"></a>
                            </div>
                            <h5 class="product-name">
                            <a href="#">Категория 1 - 1</a>
                            
                            </h5>
                        </div>
                    </li>
                    <li class="col-sm-3">
                        <div class="product-container">
                            <div class="product-thumb">
                                <a href="#"><img src="/data/sub-cat2.jpg" alt="Product"></a>
                            </div>
                            <h5 class="product-name">
                            <a href="#">Категория 1 - 2</a>
                            
                            </h5>
                        </div>
                    </li>
                    <li class="col-sm-3">
                        <div class="product-container">
                            <div class="product-thumb">
                                <a href="#"><img src="/data/sub-cat3.jpg" alt="Product"></a>
                            </div>
                            <h5 class="product-name">
                            <a href="#">>Категория 1 - 3</a>
                            
                            </h5>
                        </div>
                    </li>
                    <li class="col-sm-3">
                        <div class="product-container">
                            <div class="product-thumb">
                                <a href="#"><img src="/data/sub-cat4.jpg" alt="Product"></a>
                            </div>
                            <h5 class="product-name">
                            <a href="#">>Категория 1 - 4</a>
                            
                            </h5>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <!-- ./subcategories -->
        <!-- view-product-list-->
        <div id="view-product-list" class="view-product-list">
            <h2 class="page-heading">
            <span class="page-heading-title"><%= @product_category.name %></span>
            </h2>
            <ul class="display-product-option">
                <li class="view-as-grid selected">
                    <span>grid</span>
                </li>
                <li class="view-as-list">
                    <span>list</span>
                </li>
            </ul>
            <!-- PRODUCT LIST -->
            
        </div>
        
       
        <ul class="row product-list grid">
            <% @products.each do |product| %>
            <li class="col-sx-12 col-sm-4">
                <div class="product-container">
                    <div class="left-block">
                        <a href="<%= product_path(product) %>">
                            <% if product.avatar.normal != nil %>
                            <img class="img-responsive" alt="product" src="<%= product.avatar.normal %>" />
                            <% else %>
                            <img class="img-responsive" alt="product" src="/main/data/p35.jpg" />
                            <% end %>
                            
                        </a>
                        
                        <div class="add-to-cart">
                            <!--  <a title="Add to Cart" href="#add">В корзину</a> -->
                             <a href="#myDivID" class="fancyBoxLink">Купить</a>
                            <%# button_to 'Купить', line_items_path(product_id: product)%>
                        </div>
                    </div>
                    <div class="right-block">
                        <h5 class="product-name">
                        <%=  link_to product.name, product_path(product)%>
                        </h5>
                        <div class="product-star">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-half-o"></i>
                        </div>
                        <div class="content_price">
                            <span class="price product-price">$<%= product.price %></span>
                            <% if product.old_price != nil %>
                            <span class="price old-price">$<%= product.old_price %></span>
                            <% end %>
                        </div>
                        <div class="info-orther">
                            <% if product.sku != nil %>
                            <p>Артикул: #<%= product.sku %></p>
                            <% else %>
                            <p>Артикул: #<%= product.id %></p>
                            <% end %>
                            <p class="availability">Наличие: <span>В наличии</span></p>
                            <div class="product-desc">
                                <%= product.short_description %>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
            <% end %>
        </ul>
        <!-- ./PRODUCT LIST -->
    </div>
    <!-- ./view-product-list-->
    <div class="sortPagiBar">
        <div class="bottom-pagination">
            <nav>
                <ul class="pagination">
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li>
                        <a href="#" aria-label="Next">
                            <span aria-hidden="true">Вперед &raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        
       
    </div>
</div>
<!-- ./ Center colunm -->
</div>
<div style="display:none">
<div id="myDivID">
    <div class="box-border">
                <ul>
                    <p>Товар: Тестовый товар 1</p>
                    <p>Цена: 5000 $</p>
                    <p class="subcaption bold">Контакты покупателя</p>
                      <%= form_for(@mini_cart) do |f| %>
                    <li class="row">

                        <div class="col-sm-6">
                            <label for="first_name" class="required">Имя</label>
                             <%= f.text_field :name, class: "input form-control" %>
                        </div><!--/ [col] -->
                        <div class="col-sm-6">
                            <label for="last_name" class="required">Телефон</label>
                            <%= f.text_field :phone, class: "input form-control" %>
                        </div><!--/ [col] -->
                    </li><!--/ .row -->
                    <li class="row">
                        <div class="col-sm-6">
                            <label for="company_name">Email</label>
                            <%= f.text_field :email, class: "input form-control" %>
                        </div><!--/ [col] -->
                        <div class="col-sm-6">
                            <label for="email_address" class="required">Подписаться на рассылку</label>
                             <%= f.select(:agree_newsletter, options_for_select([['Да', true],['Нет', false]], selected: true),{},{class: "input form-control"}) %>
                        </div><!--/ [col] -->
                    </li><!--/ .row -->
                    <li class="row"> 
                        <div class="col-xs-12">

                            <label for="address" class="required">Адрес</label>
                            <%= f.text_area :phone, class: "input form-control" %>

                        </div><!--/ [col] -->

                    </li><!-- / .row -->

                    <li>
                    
                    <%= f.submit "Оформить заказ", class: "button submit_minicart" %>
                    </li>

                    <% end %>
                </ul>
            </div>
</div>
</div>