<div id="page_content">
    <div id="page_content_inner">
        <div id="page_heading">
                    <h1 id="product_edit_name">Объявление #<%= @advert.id %></h1>
                    <p>Создано: <%= @advert.created_at.to_date %></p>
           <p><%= params[:notice] %></p>
        </div>
        <div id="page_content_inner">
            <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
                
                <div class="uk-width-xLarge-10-10  uk-width-large-10-10">
                    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
                        <%= render '/sellers/adverts/edit/avatar' %>
                        <%= render '/sellers/adverts/edit/product_info' %>
                        
                        <% if @advert.advert_positions.count > 0 %>
                        <%= render '/sellers/adverts/edit/advert_info' %>
                        <% end %>
                    </div>
                    

                    <% if @advert.active == false %>
                     <%= render '/sellers/adverts/edit/add_position' %>
                    <% end %>
                   

                    <% if @advert.advert_positions.count > 0 %>
                    <%= render '/sellers/adverts/edit/advert_positions_list' %>
                    <% end %>
                </div>
            </div>
            <div class="md-fab-wrapper">
                <a class="md-btn" href="/sellers/adverts/">Назад</a>
                <%= link_to 'Удалить', sellers_advert_path(@advert), method: :delete, class: "md-btn md-btn-danger" %>
            </div>
        </div>
    </div>
</div>