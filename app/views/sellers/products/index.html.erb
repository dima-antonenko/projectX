<div id="page_content">
        <div id="page_content_inner">

            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-grid" data-uk-grid-margin>
                        <div class="uk-width-1-1">
                            <div class="uk-overflow-container">
                                <table class="uk-table">
                                    <thead>
                                        <tr>
                                            <th>Изображение</th>
                                            <th>Название</th>
                                            <th>Цена</th>
                                            <th>Статус</th>
                                            <th>Публикация</th>
                                            <th>Действие</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% @products.each do |product| %>
                                        <tr>
                                            <td><img class="img_thumb" src="<%= product.avatar.admin %>" alt=""></td>
                                            <td class="uk-text-large uk-text-nowrap"><a href="<%= edit_sellers_product_path(product.id) %>"><%= product.name %></a>
                                            <% if product.adverts.where(active: true).size > 0 %>
                                                <br/><span class="uk-badge uk-badge-success">Рекламируется</span>
                                            <% end %>    
                                            </td>
                                            <td class="uk-text-nowrap">$ <%= product.price %></td>
                                            <td class="uk-text-nowrap">
                                            <% if product.avability == 'in_stock' %>
                                                <span class="uk-badge uk-badge-success">В наличии</span>
                                            <% elsif product.avability == 'pre_order' %>
                                                <span class="uk-badge uk-badge-danger">Под заказ</span>             
                                            <% end %>
                                            </td>
                                            <td>
                                           
                                            <% if product.status == 'published' %>
                                                 <i class="material-icons uk-text-success md-24"></i>
                                            <% elsif product.status == 'no_published' %>
                                                 <i class="material-icons uk-text-muted md-24">&#xE835;</i>            
                                            <% end %>            
                                            </td>
                                            <td class="uk-text-nowrap">
                                                <% # link_to "<i class=\"material-icons md-24\">&#xE8F4;</i>".html_safe, administrator_product_path(product) %>
                                                <%= link_to "<i class=\"material-icons md-24\">&#xE872;</i>".html_safe, sellers_product_path(product), method: :delete %>
                                            
                                            </td>
                                        </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
             <div class="md-fab-wrapper">
                <a class="md-btn md-btn-success" href="/seller/products/new">Добавить</a>
            </div>
        </div>
    </div>