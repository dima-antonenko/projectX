<div id="page_content">
    <div id="page_heading">
        <h1 id="product_edit_name"><%= @static_page.name %></h1>
        
    </div>
    <div id="page_content_inner">
        <%= form_for([:administrator, @static_page], class: "uk-form-stacked", id: "product_edit_form", :multipart => true ) do |f| %>
        <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
         

            
            <div class="uk-width-xLarge-10-10  uk-width-large-10-10">
                <div class="md-card">
                    

                    <div class="md-card-content">
                    
                  
                    <div class="uk-grid">
                        <div class="uk-width-2-2">
                             <div class="uk-form-row">
                                <label>Название</label>
                                <%= f.text_area :name, class: "md-input", cols: 30, rows: 4 %>
                            </div>
                            
                            <div class="uk-form-row">
                                <label>Значение</label>
                                <%= f.text_area :content, class: "md-input", cols: 30, rows: 4 %>
                            </div>
                             <div class="uk-form-row">
                                <label>Дескриптор</label>
                                <%= f.text_field :descriptor, class: "md-input", cols: 30, rows: 4 %>
                            </div>
                        </div>
                        
                    </div>
                </div>

                
            </div>

            <div class="md-card">
                <div class="md-card-content">
                
                    <div class="uk-grid uk-grid-divider" data-uk-grid-margin>
                        <div class="uk-width-large-3-3 uk-width-medium-2-2">
                            <ul class="md-list">
                            <% @static_page.site_variables.each do |variable| %>
                                <li>
                                    <div class="md-list-content">
                                        <span class="md-list-heading"><%= link_to variable.name, edit_administrator_site_variable_path(variable) %></span>
                                        <span class="uk-text-small uk-text-muted"><%= variable.descriptor %></span>
                                    </div>
                                </li>
                            <% end %>   
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            
            </div>
        </div>
             <div class="md-fab-wrapper">
                <a class="md-btn" href="/administrator/static_pages/">Назад</a>
                <%= f.submit(class: "md-btn md-btn-success", value: "Обновить") %>
            </div>
        <% end %>
    </div>
</div>