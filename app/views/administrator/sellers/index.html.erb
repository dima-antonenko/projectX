<div id="page_content">
        <div id="page_content_inner">

            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-grid" data-uk-grid-margin="">
                        <div class="uk-width-medium-2-10">
                            <label for="product_search_name">Имя или фамилия</label>
                            <input type="text" class="md-input" id="product_search_name">
                        </div>
                        <div class="uk-width-medium-2-10">
                            <label for="product_search_name">Номер телефона</label>
                            <input type="text" class="md-input" id="product_search_name">
                        </div>
                        <div class="uk-width-medium-2-10">
                            <label for="product_search_name">Email</label>
                            <input type="text" class="md-input" id="product_search_name">
                        </div>
                        <div class="uk-width-medium-2-10">
                            <label for="product_search_name">Skype</label>
                            <input type="text" class="md-input" id="product_search_name">
                        </div>
                    
                        <div class="uk-width-medium-2-10 uk-text-center">
                            <a href="#" class="md-btn md-btn-primary uk-margin-small-top">Искать</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-grid" data-uk-grid-margin>
                        <div class="uk-width-1-1">
                            <div class="uk-overflow-container">
                                <table class="uk-table">
                                    <thead>
                                        <tr>
                                            <th>Аватар</th>
                                            <th>Имя</th>
                                            <th>Счет</th>
                                             <th>Дата регистрации</th>
                                            <th>Действие</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% @sellers.each do |seller| %>
                                        <tr>
                                            <td><img class="img_thumb" src="<%= seller.avatar.admin %>" alt=""></td>
                                            <td class="uk-text-large uk-text-nowrap"><a href="<%= edit_administrator_seller_path(seller.id) %>"><%= seller.name %> <%= seller.surname %></a></td>
                                            <td class="uk-text-nowrap">$ 2000</td>
                                            <td class="uk-text-nowrap"><%= seller.created_at.to_date %></td>
                                            <td class="uk-text-nowrap">
                                                 <%= link_to "<i class=\"material-icons md-24\">&#xE8F4;</i>".html_safe, administrator_seller_path(seller) %>

                                                <%= link_to "<i class=\"material-icons md-24\">&#xE872;</i>".html_safe, administrator_seller_path(seller), method: :delete, data: { confirm: 'Удалить продавца и все его товары ?' } %>
                                            
                                            </td>
                                        </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
             <div class="md-fab-wrapper">
                <a class="md-btn md-btn-success" href="/administrator/sellers/new">Добавить</a>
            </div>
        </div>
    </div>