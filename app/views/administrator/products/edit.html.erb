<div id="content">
	<section>
		
		<div class="section-body contain-lg">
			<div class="row">
				<div class="col-lg-12">
					<h2 class="text-primary"><%= @product.name %></h2>
					</div><!--end .col -->
					<%= flash[:notice] %>
					</div><!--end .row -->
					<!-- END INTRO -->
					<!--<form class="form-horizontal" role="form"> -->
					<%= form_for([:administrator, @product], :multipart => true, :html => {class: "form-horizontal"}  )do |f| %>
					<div class="card">
						<div class="card-head">
							<div class="tools admin_item_actions">
								<div class="btn-group">
									<a href="/administrator/products" class="btn ink-reaction btn-raised btn-xs btn-primary">Назад</a>
									<%= f.submit(class: "btn ink-reaction btn-raised btn-xs btn-primary", value: "Обновить") %>
									
									<a href="/administrator/products/new" class="btn ink-reaction btn-raised btn-xs btn-primary">Новый товар</a>

								</div>
							</div>
							<ul class="nav nav-tabs" data-toggle="tabs">
								<li class="active"><a href="#main">Главная</a></li>
								<li class=""><a href="#desc">Описание</a></li>
								<li class=""><a href="#images">Изображения</a></li>
								<li class=""><a href="#seo">Seo</a></li>
							</ul>
							
							</div><!--end .card-head -->
							<div class="card-body tab-content">
								<div class="tab-pane active" id="main"><p>
									
										<div class="row">
											<div class="col-md-6">
												<div class="form-group">
													<label for="regular13" class="col-md-3 control-label">Название</label>
													<div class="col-md-9">
													<%= f.text_field :name, class: "form-control" %>
													<!--	<input type="text" class="form-control" id="regular13"> -->
													</div>
												</div>
												<div class="form-group">
													<label for="regular13" class="col-md-3 control-label">Категория</label>
													<div class="col-md-9">
														<%= f.text_field :product_category_id, class: "form-control" %>
													</div>
												</div>
												<div class="form-group">
													<label for="regular13" class="col-md-3 control-label">Артикул</label>
													<div class="col-md-9">
														<%= f.text_field :sku, class: "form-control" %>
													</div>
												</div>
												<div class="form-group">
													<label for="regular13" class="col-md-3 control-label">На главной</label>
													<div class="col-md-9">
														<%= f.select(:best_seller_prouduct, options_for_select([['Да', true],['Нет', false]], selected: @product.best_seller_prouduct), {include_blank: 'Не выбрано'},{class: "btn"}) %>
													</div>
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group">
													<label for="regular13" class="col-md-3 control-label">Старая цена</label>
													<div class="col-md-9">
														<%= f.text_field :old_price, class: "form-control" %>
													</div>
												</div>
												<div class="form-group">
													<label for="regular13" class="col-md-3 control-label">Новая цена</label>
													<div class="col-md-9">
														<%= f.text_field :price, class: "form-control" %>
													</div>
												</div>
												<div class="form-group">
													<label for="regular13" class="col-md-3 control-label">Наличие</label>
													<div class="col-md-9">
														<%= f.select(:avability, options_for_select([['В наличии', 'in_stock'],['Под заказ', 'custom']], selected: @product.avability), {include_blank: 'Не выбрано'},{class: "btn"}) %>
													</div>
												</div>
												<div class="form-group">
													<label for="regular13" class="col-md-3 control-label">Статус</label>
													<div class="col-md-9">
														<%= f.select(:status, options_for_select([['Опубликовано', 'published'],['Черновик', 'draft']], selected: @product.status), {include_blank: 'Не выбрано'},{class: "btn"}) %>
													</div>
												</div>
											</div>
										</div>
										
									</div>
									<div class="tab-pane" id="desc"><p>
										<div class="row">
											<div class="form-group">
												<label for="regular13" class="col-sm-2 control-label">Описание</label>
												<div class="col-sm-10">
												<%= f.text_area :description, {class: "form-control", id: "textarea13", rows: "3"} %>
													
												</div>
											</div>
											<div class="form-group">
												<label for="regular13" class="col-sm-2 control-label">Краткое описание</label>
												<div class="col-sm-10">
												<%= f.text_area :short_description, {class: "form-control", id: "textarea13", rows: "3"} %>
													
												</div>
											</div>
										</div>
									</div>
									<div class="tab-pane" id="images">
										
										<p class="text-lg">Аватар</p>

										<%= f.file_field :avatar %>

										<ul class="list divider-full-bleed">
										
											<li class="tile">
												<a class="tile-content ink-reaction" href="#2">
													<div class="tile-icon">
														<img src="<%= @product.avatar_url %>" alt="">
													</div>
													<div class="tile-text"><%= @product.avatar %></div>
												</a>
												<a class="btn btn-flat ink-reaction" href="#">Удалить</a>												
											</li>
										
										</ul>

										<p class="text-lg">Другие изображения</p>

										<%= file_field_tag  "images[]", type: :file, multiple: true, class: "btn blue-madison", id: "tab_images_uploader_pickfiles" %>

										<ul class="list divider-full-bleed">
										<% @product_attachments.each do |product_attachment| %>
											<li class="tile">
												<a class="tile-content ink-reaction" href="#2">
													<div class="tile-icon">
														<img src="<%= product_attachment.image.thumb %>" alt="">
													</div>
													<div class="tile-text"><%= product_attachment.image.thumb %></div>
												</a>
												<%= link_to 'Удалить', product_attachment, method: :delete, data: { confirm: 'Вы уверены ?' }, class: "btn btn-flat ink-reaction" %>
												
											</li>
										<% end %>	
										</ul>

										
									</div>
									<div class="tab-pane" id="seo">
										<div class="row">
											<div class="form-group">
												<label for="regular13" class="col-sm-3 control-label">Title</label>
												<div class="col-sm-9">
													<%= f.text_area :seo_title, class: "form-control" %>
												</div>
											</div>

											<div class="form-group">
												<label for="regular13" class="col-sm-3 control-label">Description</label>
												<div class="col-sm-9">
													<%= f.text_area :seo_description, class: "form-control" %>
												</div>
											</div>

											<div class="form-group">
												<label for="regular13" class="col-sm-3 control-label">Keywords</label>
												<div class="col-sm-9">
													<%= f.text_area :seo_keywords, class: "form-control" %>
												</div>
											</div>
										</div>
										
									
								</div>
							</div>
							
							</div><!--end .card-body -->
							</div><!--end .card -->
							<% end %>
								
							
					<h2 class="text-primary">Продавец</h2>
					
							
							<!-- BEGIN HORIZONTAL FORM - BASIC ELEMENTS-->
							<div class="card">
								<div class="card-body">
									<form class="form-horizontal" role="form">
										<div class="form-group">
											<label for="regular13" class="col-sm-2 control-label">Имя и фамилия</label>
											<div class="col-sm-10">
												<p class="text-lg"><%= @product.seller.name %> <%= @product.seller.surname %></p>
											</div>
										</div>
										<div class="form-group">
											<label for="password13" class="col-sm-2 control-label">Статус</label>
											<div class="col-sm-10">
												<p class="text-lg"><%= @product.seller.status %></p>
											</div>
										</div>
										<div class="form-group">
											<label for="password13" class="col-sm-2 control-label">Email</label>
											<div class="col-sm-10">
												<p class="text-lg"><%= @product.seller.email %></p>
											</div>
										</div>
										<div class="form-group">
											<label for="password13" class="col-sm-2 control-label">Phone</label>
											<div class="col-sm-10">
												<p class="text-lg"><%= @product.seller.phone %></p>
											</div>
										</div>
										<div class="form-group">
											<label for="password13" class="col-sm-2 control-label">Skype</label>
											<div class="col-sm-10">
												<p class="text-lg"><%= @product.seller.skype %></p>
											</div>
										</div>
										<div class="form-group">
											<label for="password13" class="col-sm-2 control-label">Город</label>
											<div class="col-sm-10">
												<p class="text-lg"><%= @product.seller.sity %></p>
											</div>
										</div>
									</form>
									</div><!--end .card-body -->
									</div><!--end .card -->
									

													
																									</div><!--end .section-body -->
																								</section>
																							</div>