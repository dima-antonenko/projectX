<div id="page_content">
    <div id="page_heading">
        <h1 id="product_edit_name">Новая категория записей</h1>
    </div>
    <div id="page_content_inner">
        <%= form_for([:administrator, @post_category], class: "uk-form-stacked", id: "product_edit_form", :multipart => true ) do |f| %>
        <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
            <div class="uk-width-xLarge-2-10 uk-width-large-3-10">
                <div class="md-card">
                    
                    <div class="md-card-content">
                        <div class="uk-float-right">
                            <input type="checkbox" data-switchery checked name="product_edit_active_control" id="product_edit_active_control" />
                        </div>
                        <label class="uk-display-block uk-margin-small-top" for="product_edit_active_control">Отображать саитбаре</label>
                    </div>
                </div>
                
            </div>
            <div class="uk-width-xLarge-10-10  uk-width-large-10-10">
                <div class="md-card">
                    <div class="md-card-toolbar">
                        <h3 class="heading_a">Основная информация</h3>
                    </div>
                    

                    <div class="md-card-content">
                  
                    <div class="uk-grid">
                        <div class="uk-width-2-2">
                            <div class="uk-form-row">
                                <label>Название</label>
                                <%= f.text_field :name, class: "md-input", cols: 30, rows: 4 %>
                            </div>
                            <div class="uk-form-row">
                                <label>Описание</label>
                                <%= f.text_area :description, class: "md-input", cols: 30, rows: 4 %>
                            </div>
                            
                            
                        </div>
                        
                    </div>
                </div>

                </div>
                
            <div class="md-card">
                <div class="md-card-content">
                    <h3 class="heading_a">SEO</h3>
                    <div class="uk-grid">
                        <div class="uk-width-2-2">
                            <div class="uk-form-row">
                                <label>Title</label>
                                <%= f.text_area :seo_title, class: "md-input", cols: 30, rows: 4 %>
                            </div>
                            <div class="uk-form-row">
                                <label>Description</label>
                                <%= f.text_area :seo_description, class: "md-input", cols: 20, rows: 4 %>
                            </div>
                            <div class="uk-form-row">
                                <label>Keywords</label>
                                <%= f.text_area :seo_keywords, class: "md-input", cols: 20, rows: 4 %>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
            </div>
        </div>
             <div class="md-fab-wrapper">
                <a class="md-btn" href="/administrator/post_categories/">Назад</a>
                <%= f.submit(class: "md-btn md-btn-success", value: "Создать") %>
            </div>
        <% end %>
    </div>
</div>