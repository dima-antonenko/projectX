<div id="page_content">
    <div id="page_heading">
        <h1 id="product_edit_name">Новый блок</h1>
        
    </div>
    <div id="page_content_inner">
        <%= form_for([:administrator, @site_variable], class: "uk-form-stacked", id: "product_edit_form", :multipart => true ) do |f| %>
        <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
         

            
            <div class="uk-width-xLarge-10-10  uk-width-large-10-10">
                <div class="md-card">
                    

                    <div class="md-card-content">
                    
                  
                    <div class="uk-grid">
                        <div class="uk-width-2-2">
                             <div class="uk-form-row">
                                <label>Название</label>
                                <%= f.text_area :name, class: "md-input", cols: 30, rows: 4 %>
                            </div>
                            
                            <div class="uk-form-row">
                                <label>Значение</label>
                                <%= f.text_area :content, class: "md-input", cols: 30, rows: 4 %>
                            </div>

                            <div class="uk-form-row">
                                <label>Дескриптор</label>
                                <%= f.text_field :descriptor, class: "md-input", cols: 30, rows: 4 %>
                            </div>

                            <div class="uk-form-row">
                                    <label >Страница</label>
                                    <%= f.select :static_page_id , StaticPage.all.collect {|page| [page.name, page.id ]},{include_blank: 'Не выбрано'}, {"data-md-selectize ": true } %>
                            </div>
                        </div>
                        
                    </div>
                </div>

                
            </div>

            
           
            </div>
        </div>
             <div class="md-fab-wrapper">
                <a class="md-btn" href="/administrator/static_pages/">Назад</a>
                <%= f.submit(class: "md-btn md-btn-success", value: "Сохранить") %>
            </div>
        <% end %>
    </div>
</div>