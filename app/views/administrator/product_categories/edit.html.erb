	<div id="content">
	<section>
		
		<div class="section-body contain-lg">
			<div class="row">
				<div class="col-lg-12">
					<h2 class="text-primary"><%= @product_category.name %></h2>
					</div><!--end .col -->
					<%= flash[:notice] %>
					</div><!--end .row -->
					<!-- END INTRO -->
					<!--<form class="form-horizontal" role="form"> -->
					<%= form_for([:administrator, @product_category], :multipart => true, :html => {class: "form-horizontal"}  )do |f| %>
					<div class="card">
						<div class="card-head">
							<div class="tools admin_item_actions">
								<div class="btn-group">
									<a href="/administrator/product_categories" class="btn ink-reaction btn-raised btn-xs btn-primary">Назад</a>
									<%= f.submit(class: "btn ink-reaction btn-raised btn-xs btn-primary", value: "Обновить") %>
									
									<a href="/administrator/product_categories/new" class="btn ink-reaction btn-raised btn-xs btn-primary">Создать</a>

								</div>
							</div>
							<ul class="nav nav-tabs" data-toggle="tabs">
								<li class="active"><a href="#main">Главная</a></li>
								<li class=""><a href="#images">Изображения</a></li>
								<li class=""><a href="#seo">Seo</a></li>
							</ul>
							
							</div><!--end .card-head -->
							<div class="card-body tab-content">
								<div class="tab-pane active" id="main"><p>
									<div class="row">
											<div class="form-group">
												<label for="regular13" class="col-sm-2 control-label">Название</label>
												<div class="col-sm-10">
												<%= f.text_field :name, {class: "form-control", id: "textarea13", rows: "3"} %>
													
												</div>
											</div>

											<div class="form-group">
												<label for="regular13" class="col-sm-2 control-label">Родительская категория</label>
												<div class="col-sm-10">
												

												<%= f.select :product_category_id , ProductCategory.all.collect {|category| [category.name, category.id ]},{include_blank: 'Не выбрано'}, {class: "form-control"} %>
													
												</div>
											</div>
											<div class="form-group">
												<label for="regular13" class="col-sm-2 control-label">Описание</label>
												<div class="col-sm-10">
												<%= f.text_area :description, {class: "form-control", id: "textarea13", rows: "3"} %>
													
												</div>
											</div>

											<div class="form-group">
													<label for="regular13" class="col-md-2 control-label">На главной</label>
													<div class="col-md-10">
														<%= f.select(:to_main_page, options_for_select([['Да', true],['Нет', false]], selected: @product_category.to_main_page), {include_blank: 'Не выбрано'},{class: "btn"}) %>
													</div>
												</div>
										</div>				
								</div>
									<div class="tab-pane" id="images">
										
										<p class="text-lg">Аватар</p>

										<%= f.file_field :avatar %>

										<ul class="list divider-full-bleed">
										
											<li class="tile">
												<a class="tile-content ink-reaction" href="#2">
													<div class="tile-icon">
														<img src="<%= @product_category.avatar_url %>" alt="">
													</div>
													<div class="tile-text"><%= @product_category.avatar %></div>
												</a>
												<a class="btn btn-flat ink-reaction" href="#">Удалить</a>												
											</li>
										
										</ul>

										<p class="text-lg">Другие изображения</p>

										<%= file_field_tag  "images[]", type: :file, multiple: true %>

										<ul class="list divider-full-bleed">
										<% @product_category_attachments.each do |product_attachment| %>
											<li class="tile">
												<a class="tile-content ink-reaction" href="#2">
													<div class="tile-icon">
														<img src="<%= product_attachment.image.admin %>" alt="">
													</div>
													<div class="tile-text"><%= product_attachment.image.admin %></div>
												</a>
												<%= link_to 'Удалить', product_attachment, method: :delete, data: { confirm: 'Вы уверены ?' }, class: "btn btn-flat ink-reaction" %>
												
											</li>
										<% end %>	
										</ul>

										
									</div>
									<div class="tab-pane" id="seo">
										<div class="row">
											<div class="form-group">
												<label for="regular13" class="col-sm-2 control-label">Title</label>
												<div class="col-sm-10">
													<%= f.text_area :seo_title, class: "form-control" %>
												</div>
											</div>

											<div class="form-group">
												<label for="regular13" class="col-sm-2 control-label">Description</label>
												<div class="col-sm-10">
													<%= f.text_area :seo_description, class: "form-control" %>
												</div>
											</div>

											<div class="form-group">
												<label for="regular13" class="col-sm-2 control-label">Keywords</label>
												<div class="col-sm-10">
													<%= f.text_area :seo_keywords, class: "form-control" %>
												</div>
											</div>
										</div>
										
									
								</div>
							</div>
							
							</div><!--end .card-body -->
							</div><!--end .card -->
							<% end %>
								
							
									

													
																									</div><!--end .section-body -->
																								</section>
																							</div>