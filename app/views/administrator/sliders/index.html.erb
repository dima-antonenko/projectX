<div id="page_content">
        <div id="page_content_inner">

            <h3 class="heading_b uk-margin-bottom">Слайдеры</h3>

            <div class="md-card uk-margin-medium-bottom">
                <div class="md-card-content">
                    <div class="uk-overflow-container">
                        <table class="uk-table uk-table-hover">
                            <thead>
                            <tr>
                                <th>Название</th>
                                <th>Количество слайдов</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% @sliders.each do |slider| %>
                                <tr>
                                    <td><%= link_to slider.name, administrator_slider_path(slider) %></td>
                                      
                                    <td><%= slider.slides.count %></td>
                                   
                                </tr>
                            <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        <div class="md-fab-wrapper">
                <a class="md-btn md-btn-success" href="/administrator/slides/new">Добавить</a>
         </div>
           
        </div>
    </div>

    