<div id="page_content">
    <div id="page_heading">
        <h1 id="product_edit_name"><%= @slide.title %></h1>
    </div>
    <div id="page_content_inner">
        <%= form_for([:administrator, @slide], class: "uk-form-stacked", id: "product_edit_form", :multipart => true ) do |f| %>
        <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        

            <div class="uk-width-xLarge-3-10 uk-width-large-3-10">
                
                <div class="md-card">
                    <div class="md-card-toolbar">
                        <div class="md-card-toolbar-actions">
                            <%= f.file_field :image, class: "product_file_upload" %>
                        </div>
                    </div>
                    <div class="md-card-content">
                        <div class="uk-margin-bottom uk-text-center uk-position-relative">
                            <img src="<%= @slide.image.url(:admin) %>" alt="" class="img_medium"/>
                        </div>
                    </div>
                </div>
            </div>

             <div class="uk-width-xLarge-7-10 uk-width-large-7-10">
                
                <div class="md-card">
                    

                    <div class="md-card-content">
                    <h3 class="heading_a">Основная информация</h3>
                  
                    <div class="uk-grid">
                        <div class="uk-width-2-2">
                            <div class="uk-form-row">
                                <label>Название</label>
                                <%= f.text_field :title, class: "md-input", cols: 30, rows: 4 %>
                            </div>
                            <div class="uk-form-row">
                                <label>Слайдер</label>
                               <%= f.select :slider_id , Slider.all.collect {|slider| [slider.name, slider.id ]},{include_blank: 'Не выбрано'}, {"data-md-selectize ": true } %>
                            </div>
                            <div class="uk-form-row">
                                <label>Дескриптор</label>
                                <%= f.text_area :descriptor, class: "md-input", cols: 30, rows: 4 %>
                            </div>
                            
                        </div>
                        
                    </div>
                </div>

                
            </div>
            </div>

            
           
        </div>
             <div class="md-fab-wrapper">
                <a class="md-btn" href="/administrator/sliders/">Назад</a>
                <%= f.submit(class: "md-btn md-btn-success", value: "Обновить") %>
            </div>
        <% end %>
    </div>
</div>